@{
  Layout = "_Layout";
}

@using SweetSavory.Models;
@model List<SweetSavory.Models.Flavors>;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
}

@foreach (Flavors Flavors in Model)
{
  <li>@Html.ActionLink($"{Flavors.Name}", "Details", new { id = Flavors.FlavorsId })</li>
}

<p>@Html.ActionLink("Add new Flavors", "Create")</p>
